unit UClasse.Config.Conexao;

interface

uses
  UClasse.Config.Acesso.Banco, System.SysUtils, Data.DB;

Type
  TClasseConfigBackUp = class
  private
    FQuery: TConfigConexaoBanco;
  public

  procedure retornarDados(value:TDataSource);

    constructor create;
    destructor destroy; override;

  end;

implementation

{ TClasseConfigBackUp }

constructor TClasseConfigBackUp.create;
begin
  FQuery.retornarDados('config_backup');
end;

destructor TClasseConfigBackUp.destroy;
begin

  FreeAndNil(FQuery);

  inherited;
end;

procedure TClasseConfigBackUp.retornarDados(value: TDataSource);
begin
   value.DataSet := FQuery.
end;

end.
