  TQuery.Connection := DataModule1.Conexao;

  TQuery.Active := false;
  TQuery.SQL.Clear;
  TQuery.SQL.Add
    ('select * from PARCELAS_ORDEM where PGTO =:p and DATA_PAGAMENTO =:d');
