  TQuery.ParamByName('d').AsDate := FUltimaData;
  TQuery.Active := true;

  TQuery.First;
  total := 0;

  while not TQuery.Eof do
  begin
    total := total + TQuery.FieldByName('TOTAL').AsCurrency;
    TQuery.Next;
  end;

  FTotalParcelasVendasEstornadas := total;

  showmessage(CurrToStr(total) + ' Vendas estornadas');

  FreeAndNil(TQuery);

end;

