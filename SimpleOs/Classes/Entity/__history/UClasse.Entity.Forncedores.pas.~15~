  : iCadastroFornecedores;
begin
  result := self;
  FDataFinal := value;
  // FQuery.getDataFinal(value);
end;

function TEntityCadastroFornecedores.getDataInicial(value: TDate)
  : iCadastroFornecedores;
begin
  result := self;
  FDataInicial := value;
  // FQuery.getDataInicial(value);
end;

